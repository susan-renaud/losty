


  <details open>
    <summary>My Conversations</summary>
      <div class="claim-content">
      <% @conversations.each do |conversation| %>
      <div class="post-card-messages">
        <div class="my-item-infos-message">
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
        <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
        <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <div><%= cl_image_tag recipient.photo, class: 'avatar' %></div>

        <div class="item-name"><%= link_to recipient.name, conversation_messages_path(conversation)%></div>
        <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </details>



