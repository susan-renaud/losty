<div class="container">
  <div class="item-img">
    <% if @item.photo %>
      <%= image_tag @item.photo, width: 100 %>

    <% end %>
  </div>
  <div class="item-content">
    <h1><%= @item.name %></h1>
    <p><%= @item.description %></p>
    <p>Where: <%= @item.location %></p>
    <p>Posted on: <%= @item.created_at.strftime('%e %b %Y') %></p>
    <% if @item.user == current_user %>
      <%= link_to "Edit Item", edit_item_path(@item), class: 'btn btn-success' %>
    <%= link_to "Delete Item", item_path(@item), method: :delete, class: 'btn btn-success',
        data: { confirm: "Are you sure?" } %>
    <% else %>
  <%= link_to "Claim Item", new_item_claim_path(@item), class: 'btn btn-success' %>
  <% end %>
  </div>
  <div class="items-map">
    <div
      id="map"
      style="width: 80%;
      height: 400px;"
      data-markers="<%= @marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
